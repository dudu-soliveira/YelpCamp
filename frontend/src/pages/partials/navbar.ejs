<nav class="sticky top-0 z-50 bg-gray-900">
  <div class="mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <button
          type="button"
          class="relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
          aria-controls="mobile-menu"
          aria-expanded="false"
          id="mobile-menu-button"
        >
          <span class="absolute -inset-0.5"></span>
          <span class="sr-only">Open main menu</span>
          <svg
            class="block h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
            />
          </svg>
          <svg
            class="hidden h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
        </button>
      </div>
      <div
        class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start"
      >
        <div class="flex flex-shrink-0 items-center">
          <div class="h-8 w-auto text-xl font-medium text-white">
            <a href="/">YelpCamp</a>
          </div>
        </div>
        <div class="hidden sm:ml-6 sm:block">
          <div class="flex space-x-3 font-medium text-gray-500">
            <a
              href="/"
              class="<%= title === 'YelpCamp' ? 'text-white' : '' %> px-1 py-2 hover:text-white"
              aria-current="page"
              >Home</a
            >
            <a
              href="/campgrounds"
              class="<%= title === 'All Campgrounds' ? 'text-white' : '' %> px-1 py-2 hover:text-white"
              >Campgrounds</a
            >
            <a
              href="/campgrounds/new"
              class="<%= title === 'New Campground' ? 'text-white' : '' %> px-1 py-2 hover:text-white"
              >New Campground</a
            >
          </div>
        </div>
      </div>
      <div
        class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0"
      >
        <% if (currentUser) { %>
        <div class="relative ml-3">
          <div>
            <button
              type="button"
              class="relative flex rounded-full bg-gray-800 text-sm focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800"
              id="user-menu-button"
              aria-expanded="false"
              aria-haspopup="true"
            >
              <span class="absolute -inset-1.5"></span>
              <span class="sr-only">Open user menu</span>
              <img
                class="h-8 w-8 rounded-full object-cover object-center"
                src="<%= currentUser.picture ? currentUser.picture.url : '/images/profile.jpg' %>"
                alt=""
              />
            </button>
          </div>
          <div
            class="absolute right-0 z-10 mt-2 hidden w-48 origin-top-right transform rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 transition duration-100 ease-out focus:outline-none aria-hidden:scale-95 aria-hidden:opacity-0 aria-hidden:duration-75 aria-hidden:ease-in"
            role="menu"
            aria-hidden="true"
            aria-orientation="vertical"
            aria-labelledby="user-menu-button"
            tabindex="-1"
            id="user-menu"
          >
            <a
              href="/users/<%= currentUser.username %>"
              class="block px-4 py-2 text-sm text-gray-700"
              role="menuitem"
              tabindex="-1"
              id="user-menu-item-0"
              >Your Profile</a
            >
            <a
              href="/logout"
              class="block px-4 py-2 text-sm text-gray-700"
              role="menuitem"
              tabindex="-1"
              id="user-menu-item-1"
              >Sign out</a
            >
          </div>
        </div>
        <% } else { %>
        <div class="flex space-x-5 font-medium text-gray-500">
          <a
            href="/signup"
            class="<%= title === 'Sign Up' ? 'text-white bg-gray-700' : '' %> rounded-xl border border-gray-700 px-3 py-1.5 hover:bg-gray-700 hover:text-white"
            aria-current="page"
            >Sign Up</a
          >
          <a
            href="/login"
            class="<%= title === 'Log In' ? 'text-white bg-gray-700' : '' %> hidden rounded-xl border border-gray-700 px-3 py-1.5 hover:bg-gray-700 hover:text-white md:inline-block"
            >Log In</a
          >
        </div>
        <% } %>
      </div>
    </div>
  </div>

  <div class="hidden sm:hidden" id="mobile-menu" aria-hidden="true">
    <div class="space-y-1 px-2 pb-3 pt-2 font-medium text-gray-500">
      <a
        href="/"
        class="<%= title === 'YelpCamp' ? 'text-white' : '' %> block px-1 py-2 hover:text-white"
        aria-current="page"
        >Home</a
      >
      <a
        href="/campgrounds"
        class="<%= title === 'All Campgrounds' ? 'text-white' : '' %> block px-1 py-2 hover:text-white"
        >Campgrounds</a
      >
      <a
        href="/campgrounds/new"
        class="<%= title === 'New Campground' ? 'text-white' : '' %> block px-1 py-2 hover:text-white"
        >New Campground</a
      >
    </div>
  </div>
</nav>
