<% if (flash.success && flash.success.length) { %>
<div
  class="absolute left-1/2 top-20 z-10 flex min-w-[33.3333%] max-w-[90%] -translate-x-1/2 transform items-center rounded-lg border border-green-700 bg-green-50 p-4 text-green-700 transition-opacity duration-300 lg:max-w-[75%] 2xl:max-w-[66.6666%]"
  role="alert"
  id="flashSuccess"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-6 w-6 shrink-0 stroke-current"
    fill="none"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
    />
  </svg>
  <span class="sr-only">Success</span>
  <div class="ms-3 pr-4 font-medium"><%= flash.success %></div>
  <button
    type="button"
    class="-mx-1.5 -my-1.5 ms-auto inline-flex h-8 w-8 items-center justify-center rounded-lg p-1.5 hover:bg-green-100 focus:ring-2 focus:ring-green-700"
    data-dismiss-target="#alert-1"
    aria-label="Close"
    id="dismissFlashSuccess"
  >
    <span class="sr-only">Close</span>
    <svg
      class="h-3 w-3"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 14 14"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
      />
    </svg>
  </button>
</div>
<% } %> <% if (flash.error && flash.error.length) { %>
<div
  class="absolute left-1/2 top-20 z-10 flex min-w-[33.3333%] max-w-[90%] -translate-x-1/2 transform items-center rounded-lg border border-red-700 bg-red-50 p-4 text-red-700 transition-opacity duration-300 lg:max-w-[75%] 2xl:max-w-[66.6666%]"
  role="alert"
  id="flashError"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-6 w-6 shrink-0 stroke-current"
    fill="none"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
    />
  </svg>
  <span class="sr-only">Error</span>
  <div class="ms-3 pr-4 font-medium"><%= flash.error %></div>
  <button
    type="button"
    class="-mx-1.5 -my-1.5 ms-auto inline-flex h-8 w-8 items-center justify-center rounded-lg p-1.5 hover:bg-red-100 focus:ring-2 focus:ring-red-700"
    data-dismiss-target="#alert-1"
    aria-label="Close"
    id="dismissFlashError"
  >
    <span class="sr-only">Close</span>
    <svg
      class="h-3 w-3"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 14 14"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
      />
    </svg>
  </button>
</div>
<% } %>
